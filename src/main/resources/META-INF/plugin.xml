<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
  <!-- Unique identifier of the plugin. It should be FQN. It cannot be changed between the plugin versions. -->
  <id>com.artemus.ArtemusAI</id>

  <!-- Public plugin name should be written in Title Case.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-name -->
  <name>ArtemusAI</name>

  <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
  <vendor email="support@artemusai.com" url="https://www.artemusai.com">Artemus AI</vendor>

  <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
       Simple HTML elements (text formatting, paragraphs, and lists) can be added inside of <![CDATA[ ]]> tag.
       Guidelines: https://plugins.jetbrains.com/docs/marketplace/plugin-overview-page.html#plugin-description -->
  <description><![CDATA[
    Artemus is your AI assistant. Get Inline Code Suggestions and talk to Artemus in chat.<br>
  ]]></description>

  <!-- Product and plugin compatibility requirements.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
  <depends>com.intellij.modules.platform</depends>

  <!-- Extension points defined by the plugin.
       Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
  <extensions defaultExtensionNs="com.intellij">
    <actionPromoter implementation="com.artemus.inlineCompletionApi.InlineActionsPromoter"/>
    <editorActionHandler action="EditorEscape" implementationClass="com.artemus.inlineCompletionApi.EscapeHandler"
                         id="RemovePreviewEscape" order="before hide-hints"/>
    <editorActionHandler action="EditorRight" implementationClass="com.artemus.inlineCompletionApi.CaretMoveHandler"
                         id="RemovePreviewArrowRight" order="before hide-hints"/>
    <editorActionHandler action="EditorLeft" implementationClass="com.artemus.inlineCompletionApi.CaretMoveHandler"
                         id="RemovePreviewArrowLeft" order="before hide-hints"/>
    <editorActionHandler action="EditorUp" implementationClass="com.artemus.inlineCompletionApi.CaretMoveHandler"
                         id="RemovePreviewArrowUp" order="before hide-hints"/>
    <editorActionHandler action="EditorDown" implementationClass="com.artemus.inlineCompletionApi.CaretMoveHandler"
                         id="RemovePreviewArrowDown" order="before hide-hints"/>
  </extensions>

  <actions>

    <action class="com.artemus.inlineCompletionApi.ShowNextInlineCompletion"
            id="ShowNextTabnineInlineCompletionAction" text="Show Next Inline Completion">
      <keyboard-shortcut first-keystroke="alt CLOSE_BRACKET" keymap="$default"/>
    </action>

    <action class="com.artemus.inlineCompletionApi.ShowPreviousInlineCompletion"
            id="ShowPreviousTabnineInlineCompletionAction" text="Show Previous Inline Completion">
      <keyboard-shortcut first-keystroke="alt OPEN_BRACKET" keymap="$default"/>
    </action>

    <action class="com.artemus.inlineCompletionApi.AcceptInlineCompletion"
            id="AcceptInlineCompletion" text="Accept Inline Completion">
      <keyboard-shortcut first-keystroke="TAB" keymap="$default" />
    </action>

    <action class="com.artemus.ShowTestPreveiw"
            id="ShowTestPreveiw" text="Trigger Test Action">
      <keyboard-shortcut first-keystroke="alt 0" keymap="$default"/>
    </action>
  </actions>

</idea-plugin>